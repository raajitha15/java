import java.util.Scanner;
class ShapeAndCircle 
{
	public static void m1(int l,int b)
	{
		int area=l*b;
		System.out.println("i am a shape : "+area);
	}
	public static void m2(double r)
	{
		
		double d=r*r*3.15;
		System.out.println("i am a circle: "+d);
	}
}
class TestShapeCircle
{
    public static void main(String[] args) 
	{
		int l,b;
		double r;
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the length of a shape: ");
		l=sc.nextInt();
		System.out.println("enter the breadth of a shape: ");
		b=sc.nextInt();
		System.out.println("enter the radis of a circle: ");
		r=sc.nextDouble();
		ShapeAndCircle obj=new ShapeAndCircle();
		obj.m1(10,15);
		obj.m2(8);
		
	}
}
